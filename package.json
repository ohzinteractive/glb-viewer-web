{
  "name": "ohzi-framework-mini",
  "description": "OHZI Framework mini.",
  "author": "OHZI Interactive Studio",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "preinstall": "yarn config-hooks",
    "config-hooks": "yarn config-boilerplate-hooks",
    "config-boilerplate-hooks": "git config core.hooksPath git_hooks",
    "start": "node tasks/remove_cache.mjs && node tasks/start_app.mjs false",
    "start-ssl": "node tasks/remove_cache.mjs && node tasks/start_app.mjs true",
    "start-vite": "vite --port 1234",
    "start-vite-ssl": "VITE_USE_HTTPS=true vite --port 443",
    "build-api": "vite build ./app/js/Api.js --no-cache",
    "build": "node tasks/remove_cache.mjs && node tasks/build_app.mjs && yarn copy-public",
    "build-vite": "vite build",
    "dist": "yarn build && yarn zip",
    "zip": "node tasks/zip_app.mjs",
    "copy-public": "node tasks/copy_folder.mjs public dist",
    "fix-syntax": "standardx --fix || echo 'Done'"
  },
  "dependencies": {

  },
  "devDependencies": {
    "archiver": "^6.0.1",
    "pug": "^3.0.3",
    "replace-in-file": "^6.2.0",
    "sass": "1.77.5",
    "standardx": "^7.0.0",
    "stylelint": "^15.3.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-order": "^6.0.3",
    "vite": "^5.3.4",
    "vite-plugin-glsl": "1.3.0",
    "vite-plugin-pug-transformer": "^1.0.5"
  },
  "standardx": {
    "ignore": [
      "/components/",
      "/core/",
      "/public/",
      "/pit/",
      "vite.config.mjs"
    ]
  }
}
